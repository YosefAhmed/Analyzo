<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Analyzo.search_page" BackgroundColor="DarkRed"
              NavigationPage.HasBackButton="False"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout  HorizontalOptions="Center"  VerticalOptions="Start" >
            <Image Source="Analyzo2.png" HorizontalOptions="Center"  VerticalOptions="Start" Margin="50"></Image>
            <StackLayout Padding="20" BackgroundColor="White" HorizontalOptions="Center" VerticalOptions="Center" >
                 <Frame HorizontalOptions="Center" VerticalOptions="CenterAndExpand" CornerRadius="20">
                      <Entry Placeholder="Write YouTube Video ID" Opacity=".4" x:Name="search_txt"></Entry>
                 </Frame>
                 <Button Text="        Analyze        " 
                    TextColor="White" 
                    Clicked="searchBtn_Clicked" 
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="Center" 
                    BorderRadius="20" 
                    BackgroundColor="DarkRed">
                 </Button>
        </StackLayout>
     </StackLayout>
    </ContentPage.Content>
</ContentPage>